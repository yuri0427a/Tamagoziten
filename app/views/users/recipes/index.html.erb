

<% @recipes.each do |recipe| %>
    <%= attachment_image_tag recipe, :recipe_image, :fill, 300, 200, class: "pull-left profile-thumb"%>
    <%= attachment_image_tag recipe.user, :profile_image, :fill, 100009, 200,class: "pull-left profile-thumb"%>
    <h3><%= recipe.name %></h3>
    <p><% if @post_image.favorited_by?(current_user) %>
    <li>
      <%= link_to post_image_favorites_path(@post_image), method: :delete do %>
        <i class="fa fa-heart" aria-hidden="true" style="color: red;"></i>
        <%= @post_image.favorites.count %> いいね
      <% end %>
    </li>
  <% else %>
    <li>
      <%= link_to post_image_favorites_path(@post_image), method: :post do %>
        <i class="fa fa-heart-o" aria-hidden="true"></i>
        <%= @post_image.favorites.count %> いいね
      <% end %>
    </li>
  <% end %><%= recipe.cooking_time %></p>
    
<% end %>
