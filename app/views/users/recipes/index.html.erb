<%= render 'header' %>
<main>
  <div class="recipe-list">
    <h1 class="recipe-index">
      〜Recipe Page〜
    </h1>
      <ul>
        <% @recipes.each do |recipe| %>
          <li class="list-items index">
            <%= link_to users_recipe_path(recipe.id), class: "link-recepi" do %>
             <%= attachment_image_tag recipe, :recipe_image, :fill, 230, 130, class: "reshipe-image", fallback: "no_image.jpg", size: "230x130" %>
               <div class="detail">
                 <p class="recipe_icon">
                   <i class="glyphicon glyphicon-time"></i>
                     <%= recipe.cooking_time %><span>分</span>
                 </p>
                 <p class="recipe_icon">
                   <%= fa_icon("comment") %>
                   <%= recipe.recipe_reviews.count %>
                 </p>
               </div>
              <h3 class="recipe_title"><%= recipe.name %></h3>
            <% end %>
          </li>
        <% end %>
        <%= paginate @recipes %>
      </ul>
  </div>
</main>

  
