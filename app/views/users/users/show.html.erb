
<div class="container">
  <div class="row">  
<div class="wrap">
  <ul id="tab-menu" class="clearfix">
    <li><a href="#tab1" class="active">TAB1</a></li>
    <li><a href="#tab2" class="">TAB2</a></li>
  </ul>
</div>
<div id="tab-contents" class="clearfix">
    <div id="tab1" class="tab">
      <p>TAB1のテキストが入ります。</p>
    </div>
<div id="tab-contents" class="clearfix">
    <div id="tab2" class="tab">
      <p>TAB1のテキストが入ります。</p>
    </div>
</div>
    <div class="col-xs-offset-4">
      <h1>Profile...</h1>
        <p><%= attachment_image_tag @user, :profile_image, :fill, 300, 300, format: "jpeg", class: "profile_image", fallback: "no_image.jpg", size: "300x300" %>
        <lavel class="user-name">
        <span>I am</span>
        <%= @user.name %></lavel><br></p>
        <p class="user-introduction"><%= @user.introduction %></p>
    </div>
  </div>
  
  <%= link_to " 会員編集", users_user_path(current_user.id) , class: "show-modal" %>

  <% @recipes.each do |recipe| %>
 
    <li class="list-items">
    <%= link_to users_recipe_path(recipe.id), class: "link-recepi" do %>
      <%= attachment_image_tag recipe, :recipe_image, :fill, 230, 130, class: "reshipe-image" %>
      <div class="detail">
        <p class="recipe_time">
           <%= recipe.cooking_time %><span>分</span>
        </p>
        <h3 class="recipe_tilte"><%= recipe.name %></h3>
      </div>
      <% end %>
    </li>

    <% end %>

<%= form_for @user, url: users_user_path do |f| %>
  

  <div id="modalwin", class="modalwin out">
  
    <h1 class="edit-profile">〜Edit Profile〜</h1>
  
        <%= f.attachment_field :profile_image, placeholder: "プロフィール画像", class: "user-edit-form" %>
        <h4 class="profile-name ">ニックネーム</h4>
         <lavel><%= f.text_field :name , class: "form-control input-sm"%></lavel>
        <h4 class="profile-name">自己紹介</h4><%= f.text_area :introduction, class: "form-control input-sm" %><br>
        <%= f.submit "Update", class: "btn btn-danger" %>
      
        　<%= link_to users_user_path(current_user.id), class: "modal-close" do %>
          <%= image_tag "icon_16-1.jpg", class: "modal-close" %>
        </div>
       　<% end %>
       </div>

<% end %>